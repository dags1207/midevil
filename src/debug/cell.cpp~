#include <cell.h>
#include <object.h>
#include <stdint.h>

const uint8_t XDIM = 3;
const uint8_t YDIM = 3;

Cell::Cell() {
	this->vacancy = true;
	this->location = {0,0};
	this->dimensions = {XDIM, YDIM};
	this->occupant = 0;
}

Cell::Cell(Location location) {
	this->vacancy = true;
	this->location = location;
	this->dimensions = {XDIM, YDIM};
	this->occupant = 0;
}

Cell::Cell(Location location, Object* object) {
	this->vacancy = false;	
	this->location = location;
	this->dimensions = {XDIM, YDIM};
	this->occupant = object;
}

bool Cell::isVacant() const {
	return this->vacancy;
}

bool Cell::occupy(Object* object) {
	this->occupant = object;
	this->vacancy = false;
}

bool Cell::vacate() {
	this->occupant = 0;
	this->vacancy = true;
}

Location Cell::getLocation() const {
	return this->location;
}

Dimensions Cell::getDimensions() const {
	return this->dimensions;
}

Object* Cell::getOccupant() const {
	return this->occupant;
}
